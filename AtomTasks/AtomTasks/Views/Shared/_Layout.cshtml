<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="../../Scripts/Login.js" type="text/javascript"></script>
</head>

<body>
    <div>
        <p>@Html.ActionLink("Тест", "Test", "Home")</p>
    </div>
    <div id="header">

        <!-- Top header menu containing
             logo and Navigation bar -->
        <div id="top-header">

            <!-- Logo -->
            <div id="logo">
                <img src="images/zarech.gif" />
            </div>

            <!-- Navigation Menu -->
            <div id="addTask">
                <input type="button" value="Добавить задание" onclick=disp(document.getElementById('newTask'))>
            </div>
            <div id="header-image-menu">
                <h2 id="image-text">
                    Заречный ATOM TASK
                </h2>
            </div>
            <div id="login">
                <input type="button" value="Войти" onclick="disp(document.getElementById('modal'))">
            </div>
        </div>

        <!-- Image menu in Header to contain an Image and
             a sample text over that image -->

    </div>
    @RenderBody()

    <form id="modal">
        <p><input type="text" placeholder="Логин"></p>
        <p><input type="text" placeholder="Пароль"></p>
        <p><input type="button" value="Войти"></p>
        <p><a href="#">Зарегистрироваться</a></p>
    </form>

    <form id="newTask">
        <p>Новая задача</p>
        <p><input type="text" placeholder="Название"></p>
        <p><input type="text" placeholder="Описание"></p>
        <p><input type="text" placeholder="Начальная цена "></p>
        <p>
            <select id="ExecType" name="Type">
                <option value="Yur">Юридическое лицо</option>
                <option value="Fiz">Физическое лицо</option>
                <option value="WE">Не имеет значения</option>
            </select>
        </p>
        <p><input type="button" value="Войти"></p>
    </form>

    <script type="text/javascript">
        GetAllTasks();

        // Получение всех заданий по ajax-запросу
        function GetAllTasks() {
            $.ajax({
                url: '/api/tasks/',
                type: 'GET',
                dataType: 'json',
                success: function (data) {
                    WriteResponse(data);
                },
                error: function (x, y, z) {
                    alert(x + '\n' + y + '\n' + z);
                }
            });
        }

        // Добавление нового задания
        function AddTask() {
            // получаем значения для добавляемого задания
            var user = {
                Name: $('#addName').val(),
                Position: $('#addPosition').val()
            };

            $.ajax({
                url: '/api/users/',
                type: 'POST',
                data: JSON.stringify(user),
                contentType: "application/json;charset=utf-8",
                success: function (data) {
                    GetAllUsers();
                },
                error: function (x, y, z) {
                    alert(x + '\n' + y + '\n' + z);
                }
            });
        }

        function DeleteTask(id) {

            $.ajax({
                url: '/api/users/' + id,
                type: 'DELETE',
                contentType: "application/json;charset=utf-8",
                success: function (data) {
                    GetAllUsers();
                },
                error: function (x, y, z) {
                    alert(x + '\n' + y + '\n' + z);
                }
            });
        }

        // редактирование задания
        function EditUser() {
            var id = $('#editId').val()
            // получаем новые значения для редактируемого задания
            var user = {
                Id: $('#editId').val(),
                Name: $('#editName').val(),
                Position: $('#editPosition').val(),
            };
            $.ajax({
                url: '/api/users/' + id,
                type: 'PUT',
                data: JSON.stringify(user),
                contentType: "application/json;charset=utf-8",
                success: function (data) {
                    GetAllUsers();
                },
                error: function (x, y, z) {
                    alert(x + '\n' + y + '\n' + z);
                }
            });
        }
        // вывод полученных данных на экран
        function WriteResponse(tasks) {
            $.each(tasks, function (index, task) {
                show(task.TaskId)  
            });

        }
        // обработчик удаления
        function DeleteItem(el) {

            // получаем id удаляемого объекта
            var id = $(el).attr('data-item');
            DeleteTask(id);
        }
        // обработчик редактирования
        function EditItem(el) {

            // получаем id редактируемого объекта
            var id = $(el).attr('data-item');
            GetTask(id);
        }
        // вывод данных редактируемого пользователя в поля для редактирования
        function ShowTask(task) {
            if (user != null) {
                $("#createBlock").css('display', 'none');
                $("#editBlock").css('display', 'block');
                $("#editId").val(task.Id);
                $("#editName").val(task.Name);
                $("#editPosition").val(task.Position);
            }
            else {
                alert("Такое задание не существует");
            }
        }
        function CancelEdit() {
            $("#createBlock").css('display', 'block');

            $("#editId").val(null);
            $("#editName").val(null);
            $("#editPosition").val(null);

            $("#editBlock").css('display', 'none');

        }

        // запрос задания на редактирование
        function GetTask(id) {

            $.ajax({
                url: '/api/tasks/' + id,
                type: 'GET',
                dataType: 'json',
                success: function (data) {
                    ShowTask(data);
                },
                error: function (x, y, z) {
                    alert(x + '\n' + y + '\n' + z);
                }
            });
        }
    </script>


</body>
</html>